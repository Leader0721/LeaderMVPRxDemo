<resources>


    <style name="AppTheme" parent="Base.AppTheme" type="text/css"><!-- Customize your theme here. --></style>
    <!-- Base application theme. -->
    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.NoActionBar" type="text/css">
        <item name="colorPrimary">#454D57</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">#FF4081</item>
    </style>

    <style name="dialog" parent="@style/Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
    </style>
    <!-- 自定义对话框样式 -->
    <style name="customDialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <!-- 自定义 对话框 正极样式-->
    <style name="CustomDialog_Positive">
        <item name="android:textColor">@drawable/bg_dialog_button_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/selector_btn_ok</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- 自定义 对话框 负极样式-->
    <style name="CustomDialog_Negative">
        <item name="android:textColor">#656565</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/selector_btn_cancel</item>
        <item name="android:gravity">center</item>
    </style>

    <!--popupwindow的style-->
    <style name="PopupTop" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/slide_top_show</item>
        <item name="android:windowExitAnimation">@anim/slide_top_hide</item>
    </style>

    <style name="anim_pop">
        <item name="android:windowEnterAnimation">@anim/pop_enter</item>
        <item name="android:windowExitAnimation">@anim/pop_exit</item>
    </style>

    <style name="def_sign">
        <item name="sign_in_bg_color">#000</item>
        <item name="sign_in_pb_color">@android:color/holo_orange_dark</item>\
        <item name="sign_in_check_color">@android:color/white</item>
        <item name="sign_in_text_color">@android:color/holo_purple</item>
        <item name="sign_in_text_siz">12sp</item>
    </style>

</resources>
