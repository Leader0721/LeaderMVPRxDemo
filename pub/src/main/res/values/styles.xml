<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="dialog" parent="@style/Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
    </style>
    <!-- 自定义对话框样式 -->
    <style name="customDialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <!-- 自定义 对话框 正极样式-->
    <style name="CustomDialog_Positive">
        <item name="android:textColor">@drawable/bg_dialog_button_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/selector_btn_ok</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- 自定义 对话框 负极样式-->
    <style name="CustomDialog_Negative">
        <item name="android:textColor">#656565</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/selector_btn_cancel</item>
        <item name="android:gravity">center</item>
    </style>
    <!-- 状态视图 -->
    <declare-styleable name="XStateView">
        <attr name="empty_text" format="string" />
        <attr name="iconRes" format="reference" />
        <attr name="state">
            <enum name="empty" value="1" />
            <enum name="error" value="2" />
            <enum name="load" value="3" />
        </attr>
        <attr name="size" format="dimension" />
        <attr name="color" format="color" />
    </declare-styleable>


</resources>
