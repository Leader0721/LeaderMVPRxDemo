<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_adddeletepicker"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ic_minus"
        android:layout_width="@dimen/v30"
        android:layout_height="match_parent"
        android:clickable="true"
        android:padding="@dimen/v10"
        android:scaleType="centerInside"
        android:src="@mipmap/add_black" />


    <ImageView
        android:id="@+id/ic_plus"
        android:layout_width="@dimen/v30"
        android:layout_height="match_parent"
        android:clickable="true"
        android:padding="@dimen/v10"
        android:scaleType="centerInside"
        android:src="@mipmap/delete_black" />

    <EditText
        android:id="@+id/et_input"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null"
        android:cursorVisible="true"
        android:digits="0123456789"
        android:gravity="center"
        android:inputType="number"
        android:minWidth="@dimen/v60"
        android:singleLine="true"
        android:text="1"
        android:textColor="@color/tvc9"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/t14" />
</LinearLayout>