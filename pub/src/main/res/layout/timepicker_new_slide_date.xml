<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_timepicker_dialog"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:gravity="center_horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="20dp"
            android:text="2015年"
            android:textColor="@color/tvc3"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:gravity="center_horizontal"
            android:paddingBottom="10dp"
            android:text="2015年"
            android:textColor="@color/tvc6"
            android:textSize="17sp" />


        <FrameLayout
            android:id="@+id/fl_date"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:gravity="center_horizontal" />


        <FrameLayout
            android:id="@+id/fl_time"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:gravity="center_horizontal" />


        <View
            android:id="@+id/buttonHorizontalDivider2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/linecolor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancelButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_timepicker"
                android:clickable="true"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="取消"
                android:textColor="@color/tvc6"
                android:textSize="16dp" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/linecolor" />

            <TextView
                android:id="@+id/okButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_timepicker"
                android:clickable="true"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="确定"
                android:textColor="@color/tvc6"
                android:textSize="16dp" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
