<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5F5652"
    android:onClick="bgclick"
    android:orientation="vertical"
    android:padding="20dp">

    <com.example.android.leadermvprxdemo.activity.relativeCircleLayout.RCRelativeLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        app:RCStroke_color="#E39E83"
        app:RCStroke_width="2dp"
        app:round_corner="30dp"
        app:round_corner_top_left="0dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="click"
            android:scaleType="centerCrop"
            android:src="@mipmap/ren" />

    </com.example.android.leadermvprxdemo.activity.relativeCircleLayout.RCRelativeLayout>

    <com.example.android.leadermvprxdemo.activity.relativeCircleLayout.RCRelativeLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        app:RCStroke_color="#E39E83"
        app:RCStroke_width="2dp"
        app:round_corner="30dp"
        app:round_corner_top_right="0dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="click"
            android:scaleType="centerCrop"
            android:src="@mipmap/ren" />

    </com.example.android.leadermvprxdemo.activity.relativeCircleLayout.RCRelativeLayout>

    <com.example.android.leadermvprxdemo.activity.relativeCircleLayout.RCRelativeLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        app:RCStroke_color="#E39E83"
        app:RCStroke_width="2dp"
        app:round_corner="30dp"
        app:round_corner_bottom_left="0dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="click"
            android:scaleType="centerCrop"
            android:src="@mipmap/ren" />

    </com.example.android.leadermvprxdemo.activity.relativeCircleLayout.RCRelativeLayout>

    <com.example.android.leadermvprxdemo.activity.relativeCircleLayout.RCRelativeLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        app:RCStroke_color="#E39E83"
        app:RCStroke_width="2dp"
        app:round_corner="30dp"
        app:round_corner_bottom_right="0dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="click"
            android:scaleType="centerCrop"
            android:src="@mipmap/ren" />

    </com.example.android.leadermvprxdemo.activity.relativeCircleLayout.RCRelativeLayout>

    <com.example.android.leadermvprxdemo.activity.relativeCircleLayout.RCRelativeLayout
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_centerInParent="true"
        app:RCStroke_color="#E39E83"
        app:RCStroke_width="4dp"
        app:round_as_circle="true"
        app:round_corner="30dp"
        app:round_corner_bottom_right="0dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="click"
            android:scaleType="centerCrop"
            android:src="@mipmap/ren" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_alignParentBottom="true"
            android:background="#995F5652"
            android:gravity="center_horizontal"
            android:text="害怕.png"
            android:textColor="#fff"
            android:textSize="24sp" />

    </com.example.android.leadermvprxdemo.activity.relativeCircleLayout.RCRelativeLayout>

</RelativeLayout>