<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.android.leadermvprxdemo.activity.leiDa.view.CustomDotIndicator
        android:id="@+id/customDotIndicator"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@android:color/holo_orange_light"
        app:dotColor="@android:color/white"
        app:dotFillOrStroke="1"
        app:dotRadius="4dp"
        app:dotStrokeWidth="1dp" />

    <com.example.android.leadermvprxdemo.activity.leiDa.view.CustomRectangleIndicator
        android:id="@+id/customRectIndicator"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@android:color/holo_purple"
        app:rectColor="@android:color/white"
        app:rectHeight="8dp" />

    <com.example.android.leadermvprxdemo.activity.leiDa.view.CustomTriangleIndicator
        android:id="@+id/customTriangleIndicator"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@android:color/holo_red_light"
        app:triangleColor="@android:color/white"
        app:triangleHeight="10dp"
        app:triangleWidth="20dp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
