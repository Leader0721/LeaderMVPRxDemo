<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.android.leadermvprxdemo.activity.switchButtonView.SwitchMultiButton
        android:id="@+id/switchmultibutton1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="14dp"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        app:SwitchMultiButtonSelectedColor="#1c7626"
        app:SwitchMultiButtonSelectedTab="1"
        app:SwitchMultiButtonStrokeRadius="0dp"
        app:SwitchMultiButtonStrokeWidth="1dp"
        app:SwitchMultiButtonTextSize="14sp" />


    <com.example.android.leadermvprxdemo.activity.switchButtonView.SwitchMultiButton
        android:id="@+id/switchmultibutton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="14dp"
        android:paddingBottom="4dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="4dp"
        app:SwitchMultiButtonSelectedColor="#eb7b00"
        app:SwitchMultiButtonSelectedTab="1"
        app:SwitchMultiButtonStrokeRadius="5dp"
        app:SwitchMultiButtonStrokeWidth="1dp"
        app:SwitchMultiButtonTextSize="14sp" />

    <com.example.android.leadermvprxdemo.activity.switchButtonView.SwitchMultiButton
        android:id="@+id/switchmultibutton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="14dp"
        android:padding="8dp"
        app:SwitchMultiButtonSelectedColor="#86389c"
        app:SwitchMultiButtonSelectedTab="0"
        app:SwitchMultiButtonStrokeRadius="5dp"
        app:SwitchMultiButtonStrokeWidth="1dp"
        app:SwitchMultiButtonSwitchTabs="@array/switch_tabs"
        app:SwitchMultiButtonTextSize="14sp"
        app:SwitchMultiButtonTypeface="tielanti.ttf" />

    <com.example.android.leadermvprxdemo.activity.switchButtonView.SwitchMultiButton
        android:id="@+id/switchmultibutton4"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="14dp"
        app:SwitchMultiButtonSelectedColor="#e12251"
        app:SwitchMultiButtonStrokeRadius="14dp"
        app:SwitchMultiButtonStrokeWidth="2dp"
        app:SwitchMultiButtonTextSize="14sp" />

    <com.example.android.leadermvprxdemo.activity.switchButtonView.SwitchMultiButton
        android:id="@+id/switchmultibutton5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:padding="8dp"
        app:SwitchMultiButtonSelectedColor="#223273"
        app:SwitchMultiButtonSelectedTab="0"
        app:SwitchMultiButtonStrokeWidth="1dp"
        app:SwitchMultiButtonSwitchTabs="@array/switch_country"
        app:SwitchMultiButtonTextSize="14sp"
        app:SwitchMultiButtonTypeface="DeVinneTxtBT.ttf" />
</LinearLayout>