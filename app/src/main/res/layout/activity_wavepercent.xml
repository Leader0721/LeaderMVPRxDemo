<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.example.android.leadermvprxdemo.activity.wavePercentView.WaveView
                android:id="@+id/waveview"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                app:wave_progress_text_color="#ffffff"
                app:wave_progress_text_show="true"
                app:wave_wavecolor="@color/red" />

            <com.example.android.leadermvprxdemo.activity.wavePercentView.WaveView
                android:id="@+id/waveview_circle"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_below="@+id/waveview"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                app:wave_progress_text_color="#ffffff"
                app:wave_progress_text_show="true"
                app:wave_wavecolor="@color/red" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="201dp"
                android:layout_height="201dp"
                android:layout_below="@+id/waveview"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="55dp"
                android:background="@drawable/circle_wave" />


        </RelativeLayout>
    </ScrollView>


</RelativeLayout>