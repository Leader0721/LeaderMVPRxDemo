<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red_200"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.example.android.leadermvprxdemo.activity.delicateView.ENDownloadView
                android:id="@+id/view_download"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                app:download_bg_line_color="#3a3f45"
                app:download_bg_line_width="9"
                app:download_line_color="#ffffff"
                app:download_line_width="9"
                app:download_text_color="#ffffff"
                app:download_text_size="14" />

            <Button
                android:id="@+id/btn_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="start" />

            <Button
                android:id="@+id/btn_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="reset" />


            <com.example.android.leadermvprxdemo.activity.delicateView.ENLoadingView
                android:id="@+id/view_loading"
                android:layout_width="200dp"
                android:layout_height="140dp"
                android:layout_marginTop="20dp" />

            <Button
                android:id="@+id/btn_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="show" />

            <Button
                android:id="@+id/btn_hide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="hide" />

            <com.example.android.leadermvprxdemo.activity.delicateView.ENPlayView
                android:id="@+id/view_play"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                app:play_bg_line_color="#444a4f"
                app:play_bg_line_width="12"
                app:play_line_color="#ffffff"
                app:play_line_width="14" />

            <Button
                android:id="@+id/btn_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="play" />

            <Button
                android:id="@+id/btn_pause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="pause" />


            <com.example.android.leadermvprxdemo.activity.delicateView.ENRefreshView
                android:id="@+id/view_refresh"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                app:refresh_line_color="#ffffff"
                app:refresh_line_width="14" />

            <Button
                android:id="@+id/btn_refresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="startRefresh" />


            <com.example.android.leadermvprxdemo.activity.delicateView.ENScrollView
                android:id="@+id/view_scroll"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                app:scroll_bg_line_color="#444a4f"
                app:scroll_bg_line_width="10"
                app:scroll_is_selected="false"
                app:scroll_line_color="#ffffff"
                app:scroll_line_width="10"
                app:scroll_view_translation_x="16" />

            <Button
                android:id="@+id/btn_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="switch" />

            <com.example.android.leadermvprxdemo.activity.delicateView.ENSearchView
                android:id="@+id/view_search"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                app:search_dot_size="3"
                app:search_line_color="#ffffff"
                app:search_line_width="9" />

            <Button
                android:id="@+id/btn_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="start" />


            <com.example.android.leadermvprxdemo.activity.delicateView.ENVolumeView
                android:id="@+id/view_volume"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                app:volume_bg_line_color="#64696d"
                app:volume_bg_line_width="10"
                app:volume_line_color="#ffffff"
                app:volume_line_width="10" />

            <SeekBar
                android:id="@+id/sb_volume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp" />
        </LinearLayout>


    </ScrollView>
</LinearLayout>