<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.example.android.leadermvprxdemo.activity.dashBoardView.DashBoardView
        android:layout_centerHorizontal="true"
        android:id="@+id/dashview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:headText="kW"
        app:dashColor="@color/colorPrimary"
        />

    <Button
        android:text="改变颜色"
        android:id="@+id/bt_change_color"
        android:layout_marginTop="280dp"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/bt_change_color"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">

        <SeekBar
            android:id="@+id/sb_change_currentvalue"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/tv1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="当前值"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ll"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">

        <SeekBar
            android:id="@+id/sb_change_maxValue"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/tv2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="最大值"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


</RelativeLayout>